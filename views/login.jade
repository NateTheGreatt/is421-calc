extends layout
block content
    .image(style='margin-top: 25px;')
      img(border='0', src='/img/QalculatorGuy.jpg', alt='Calculator', width='500', height='300')
    .login(style='margin-top: 25px;')
      .row
        .span4.offset4
          .well
            legend Sign In to Qalculator
            form(method='POST', action='/login', accept-charset='UTF-8')
              input.span3(placeholder='E-mail', type='text', name='email')
              input.span3(placeholder='Password', type='password', name='password')
              label.checkbox
                input(type='checkbox', name='remember', value='1')
                | Remember Me
              input.btn-primary.btn(type="submit",value="Log In") Sign In
              p
              a(href='/signUp')  Forgot Password, Click Here!
              p
              button.btn.btn-facebook(style='clear: left; width: 100%; height: 32px; font-size: 13px; margin-bottom: 5px;')
                i.icon-facebook
                | | Connect with Facebook
              button.btn.btn-twitter(style='clear: left; width: 100%; height: 32px; font-size: 13px; margin-bottom: 5px;')
                i.icon-twitter
                | | Connect with Twitter
              br
              button.btn.btn-github(style='clear: left; width: 100%; height: 32px; font-size: 13px; margin-bottom: 5px;')
                i.icon-github
                | | Connect with Github
              br
              button.btn.btn-linkedin(style='clear: left; width: 100%; height: 32px; font-size: 13px; margin-bottom: 5px;')
                i.icon-linkedin
                | | Connect with LinkedIn
              br
              button.btn.btn-google-plus(style='clear: left; width: 100%; height: 32px; font-size: 13px;')
                i.icon-google-plus
                | | Connect with Google Plus
              br
        a(href='/signUp')  Not a Member? Click Here to Sign Up
