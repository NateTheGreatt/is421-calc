extends layout
block content
    .image(style='margin-top: 25px;')
      img(border='0', src='/img/QalculatorGuy.jpg', alt='Calculator', width='500', height='300')
    .login(style='margin-top: 25px;')
      .row
        .span4.offset4
          .well
            legend Create an Account
            form(method='POST', action='/users/add', accept-charset='UTF-8')
              input.span3(placeholder='username', type='text', name='username')
              input.span3(placeholder='password', type='password', name='password')
              label.checkbox
                input(type='checkbox', name='remember', value='1')
                | Remember Me
              input.btn-primary.btn(type="submit",value="Save") Save
    .container
      .row-fluid
        .span12
          .span8
            a(href='#') Terms of Service
            a(href='#') Privacy
            a(href='#') Security
          .span4
            p.muted.pull-right Â© 2013 Qalculator App. All rights reserved
    script(src='http://code.jquery.com/jquery.js')
    script(src='js/bootstrap.min.js')
